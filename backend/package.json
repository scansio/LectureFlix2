{
  "name": "backend",
  "version": "2.0.0",
  "description": "Backend of LectureFlix project",
  "scripts": {
    "start": "./deployment/start-server.sh",
    "start:main": "./deployment/start-server.sh MainServer",
    "start:scheduler": "./deployment/start-server.sh SchedulingServer",
    "start:repo-hook": "./deployment/start-server.sh RepoHookServer",
    "start:cdn": "./deployment/start-server.sh CdnServer",
    "start:socket": "./deployment/start-server.sh SocketServer",
    "stop": "./deployment/stop-server.sh",
    "stop:main": "./deployment/stop-server.sh MainServer",
    "stop:scheduler": "./deployment/stop-server.sh SchedulingServer",
    "stop:repo-hook": "./deployment/stop-server.sh RepoHookServer",
    "stop:cdn": "./deployment/stop-server.sh CdnServer",
    "stop:socket": "./deployment/stop-server.sh SocketServer",
    "ssm:separate": "pm2 delete all; pm2 start ./dist/server/CdnServer.js --daemon; pm2 start ./dist/server/MainServer.js --daemon; pm2 start ./dist/server/SchedulingServer.js --daemon; pm2 start ./dist/server/RepoHookServer.js --daemon; pm2 start ./dist/server/SocketServer.js --daemon;",
    "ssm": "pm2 stop all; pm2 start ./dist/startServer.js --daemon",
    "ssm:start": "npm run ssm",
    "ssm:stop": "pm2 stop all",
    "ssm:reload": "pm2 reload all",
    "ssm:delete": "pm2 delete all",
    "ssm:monitor": "pm2 monit",
    "ssm:log": "pm2 log",
    "ssm:info": "pm2 info startServer",
    "init": "chmod +x ./deployment/init.sh && ./deployment/init.sh \"$( whoami )\"",
    "init:install": "rm package-lock.json; npm install -f; npm install -g pm2; npm run init; npm run init:data-export",
    "init:data-export": "cd ..; git clone https://$LIFT_DEPLOYMENT_KEY@github.com/team-aidia/lift-data-export; cd ./lift-node-backend",
    "service:install": "sudo ./deployment/install_service.sh \"$( whoami )\"",
    "service:uninstall": "./deployment/uninstall_service.sh",
    "update": "git reset --hard origin; git pull; npm run init:install; npm run ssm:reload",
    "build": "npm run build:clear; npx tsc --project tsconfig.production.json; npm run copy_mail_template",
    "postbuild": "node ./dist/postBuild.js",
    "build:clear": "rm -rf ./dist",
    "copy_mail_template": "cp src/configs/email_template.html dist/configs/email_template.html",
    "build:dev": "npm run build:clear; npx tsc; npm run copy_mail_template",
    "nodemon": "nodemon -q ./dist/startServer.js",
    "compileThenRun": "npm run build:clear; npx tsc; npm run copy_mail_template; npm start",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q ./dist/startServer.js\"",
    "dev-with-mailhog": "concurrently \"npx tsc --watch\" \"nodemon -q ./dist/startServer.js\" \"mailhog\"",
    "format": "prettier --write ./src",
    "lint": "eslint ./src",
    "lint:autofix": "eslint ./src --fix",
    "prettier": "prettier ./src",
    "prettier:fix": "prettier --write ./src"
  },
  "author": "scansioquielom@gmail.com",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.5.0",
    "compression": "^1.7.4",
    "concurrently": "^9.1.0",
    "cors": "^2.8.5",
    "dompurify": "^3.0.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.1.0",
    "google-auth-library": "^8.9.0",
    "googleapis": "^114.0.0",
    "http-proxy-middleware": "^3.0.3",
    "jsdom": "^16.7.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.1",
    "passport": "^0.6.0",
    "passport-google-oauth2": "^0.2.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-google-oauth20-with-people-api": "^2.0.0",
    "winston": "^3.8.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.13",
    "@types/dompurify": "^3.0.2",
    "@types/express": "^4.17.17",
    "@types/jsdom": "^21.1.2",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.15.3",
    "@types/nodemailer": "^6.4.7",
    "@types/passport": "^1.0.13",
    "@types/passport-google-oauth2": "^0.1.6",
    "@types/ws": "^8.5.6",
    "nodemon": "^2.0.21",
    "typescript": "^5.1.3"
  }
}
